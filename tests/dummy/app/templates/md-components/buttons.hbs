{{#wb-md-card}}
    <div class="guideline-block">
        {{#wb-md-content-toolbar pad="null" }}
            <div class="content-toolbar__row">
                <div class="content-toolbar__element">
                    <div class="content-toolbar__title content-toolbar__title_color_blue">Buttons</div>
                </div>
                <div class="content-toolbar__element">
                    <div class="guideline-block__status guideline-block__status_stable">
                        DEV READY: stable
                    </div>
                </div>
            </div>
        {{/wb-md-content-toolbar}}
        <div class="guideline-block__example">
            {{wb-md-button type='primary' label="Button" color="blue"}}
        </div>
        <div class="guideline-block__chapter">
            <h3 class="guideline-block__chapter-title">Ember component</h3>
            {{#wb-md-code-highlight type="handlebars"}}
                &#123;{wb-md-button type='primary' color="blue" label="Button Label"}}
            {{/wb-md-code-highlight}}
            <div class="guideline-block__chapter-inner">
                <div class="guideline-block__description">
                    <h3 class="guideline-block__chapter-title">Settings</h3>
                    <ul>
                        <li><code><span>label</span></code> - Sets the button label</li>
                        <li><code><span>color</span></code> - Sets the button color</li>
                        <li><code><span>size</span></code> - Only two button sizes are available default and small</li>
                    </ul>
                    <table>
                        <thead>
                            <tr>
                                <th>default</th>
                                <th>small</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>{{wb-md-button type='primary' label="Button" color="blue"}}</td>
                                <td>{{wb-md-button type='primary' size="small" label="Button" color="blue"}}</td>
                            </tr>
                        </tbody>
                    </table>
                    <ul>
                        <li><code><span>color</span></code> - Sets the button color</li>
                    </ul>
                    <table>
                        <thead>
                            <tr>
                                <th>blue</th>
                                <th>blue-500</th>
                                <th>blue-gray</th>
                                <th>green</th>
                                <th>white</th>
                                <th>orange</th>
                                <th>transparent</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>{{wb-md-button type='primary' label="Button" color="blue"}}</td>
                                <td>{{wb-md-button type='primary' label="Button" color="blue-500"}}</td>
                                <td>{{wb-md-button type='primary' label="Button" color="blue-gray"}}</td>
                                <td>{{wb-md-button type='primary' label="Button" color="green"}}</td>
                                <td>{{wb-md-button type='primary' label="Button" color="white"}}</td>
                                <td>{{wb-md-button type='primary' label="Button" color="orange"}}</td>
                                <td>{{wb-md-button type='secondary' label="Button" color="transparent"}}</td>
                            </tr>
                        </tbody>
                    </table>
                    <ul>
                        <li><code><span>type</span></code> - Sets the button type</li>
                    </ul>
                    <table>
                        <thead>
                            <tr>
                                <th>primary</th>
                                <th>secondary</th>
                                <th>link</th>
                                <th>icon</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>{{wb-md-button type='primary' label="Primary" color="blue"}}</td>
                                <td>{{wb-md-button type='secondary' label="Secondary"}}</td>
                                <td>{{wb-md-button type='link' label="Link"}}</td>
                                <td>{{wb-md-button iconName='alarm' type='primary' color='blue'}}</td>
                            </tr>
                        </tbody>
                    </table>
                    <ul>
                        <li><code><span>disabled</span></code> - Set true to disable the button</li>
                    </ul>
                    <table>
                        <thead>
                            <tr>
                                <th>primary</th>
                                <th>secondary</th>
                                <th>link</th>
                                <th>icon</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>{{wb-md-button disabled=true type='primary' label="Primary" color="blue"}}</td>
                                <td>{{wb-md-button disabled=true type='secondary' label="Secondary"}}</td>
                                <td>{{wb-md-button disabled=true type='link' label="Link"}}</td>
                                <td>{{wb-md-button disabled=true iconName='alarm' type='primary' color='blue'}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="guideline-block__chapter-inner">
                <div class="guideline-block__description">
                    <h3 class="guideline-block__chapter-title">Events &amp; Actions</h3>
                    <table>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>action</td>
                                <td class="">
                                    <p>
                                        If <code>async</code> property is set to true the button will be enabled and disabled automatically.
                                        If <code>async</code> property is false, the attributes returned will be
                                        <code>params</code> passed to the action and <code>click</code> event object.
                                    </p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{{/wb-md-card}}

