            <div class="content-toolbar__element">{{wb-md-button label='Reset Second row custom content' type='primary' color='blue' action='changeDropDown'}}</div>
            <div class="content-toolbar__element">{{wb-md-button label='Toogle Disabled Row' type='primary' color='blue' action='toggleFirstRow'}}</div>
            <div class="content-toolbar__element">
                {{wb-md-button type='primary' color='blue' label='Enable/Disable First Name in 2nd Row' action='toggleFirstName'}}
            </div>
        </div>
    {{/wb-md-content-toolbar}}
