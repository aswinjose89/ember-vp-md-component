            <h3 class="guideline-block__chapter-title">Ember component</h3>
            {{#wb-md-code-highlight type="handlebars" }}
                &#123;{wb-md-table config=tableConfig}}
            {{/wb-md-code-highlight}}
            <div class="guideline-block__chapter-inner">
                <div class="guideline-block__description">
                    <h3 class="guideline-block__chapter-title">Additonal Settings</h3>
                    <ul>
                        <li>
                            <code><span>checkboxSelectionMenu</span></code> -Holds the config for the checkbox menu
                            <li>
                                <code><span>action</span></code> - The passed action will be invoked when checkbox selection changes
                            </li>
                            <li>
                                <code><span>items</span></code> - Holds the list of menu items for the checkbox menu
                                <ul>
                                    <li><code><span>deafultSelection default:false</span></code> - This property will set the item to be default action when
                                        clicking directly on the checkbox instead of menu</li>
                                    <li><code><span>label</span></code> - Default label shown in the menu</li>
                                    <li><code><span>selectionLabel</span></code> - This property's value will be shown when the item is selected in the checkbox menu</li>
                                    <li><code><span>isSelected default:false</span></code> - If the item is selected in the menu, <code>isSelected</code> will be <code>true</code></li>
                                </ul>
                            </li>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <h3 class="guideline-block__chapter-title">Config Object</h3>
        {{#wb-md-code-highlight type="js" }}
        {
            checkboxSelectionMenu: {
                action: 'checkboxMenuSelection',
                items: [{
                    deafultSelection: true,
                    label: 'Select view',
                    isSelected: false,
                    selectionLabel: 'Deselect View'
                },{
                    label: 'Select all page',
                    isSelected: false,
                    selectionLabel: 'Deselect Page Selection'
                }]
            },
            enableModelSelection: true,
            columns: [...]
        }
        {{/wb-md-code-highlight}}
        <div class="guideline-block__chapter-inner">
            <div class="guideline-block__description">
                <h3 class="guideline-block__chapter-title">Preview</h3>
